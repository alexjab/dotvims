[user]
  name = Alexandre Jablon
  email = alexandre.jablon@gmail.com
[core]
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
  pager = delta
[web]
  browser = firefox
[rerere]
  enabled = 1
  autoupdate = 1
[push]
  default = matching
[color]
  ui = auto
[color "branch"]
  current = yellow bold
  local = green bold
  remote = cyan bold
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold
[diff]
  tool = vimdiff
  renames = true
  mnemonicPrefix = true
[difftool]
  prompt = false
[github]
  user = alexjab
[alias]
  diffs = ! git diff $* | delta --side-by-side --features 'basics decorations colors'
  shows = ! git show $* | delta --side-by-side --features 'basics decorations colors'
  st = status
  co = checkout
  ad = add
  dif = diff
  logg = log --oneline --graph --decorate
  logl = log --oneline
  logr = ! git log "$1^.." --oneline --reverse
  merg = merge
  pus = push
  pul = pull
  unstage = reset HEAD --
  branches = for-each-ref --sort -authordate --count 10 --sort -authordate --format '%(authordate:short) %(color:green bold)%(align:left,50)%(refname:short)%(end)%(color:reset) %(subject)' refs/heads
  upgrade = "!zsh -c 'git fetch origin && git pull origin master --rebase'"
  na = notes add
  nr = notes remove
  np = push origin 'refs/notes/*'
  nf = fetch origin 'refs/notes/*:refs/notes/*'

[grep]
  extendedRegexp = true
  lineNumber = true

[delta]
  features = basics decorations colors

[delta "basics"]
  line-numbers = true
  syntax-theme = Dracula

[delta "colors"]
  plus-style = syntax "#11381b"
  plus-emph-style = syntax "#206630"
  minus-style = syntax "#4d1919"
  minus-emph-style = syntax "#993232"

  line-numbers-minus-style = red
  line-numbers-plus-style = green
  line-numbers-zero-style = "#6272a4"
  line-numbers-right-style = "#44475a"
  line-numbers-left-style = "#44475a"

  hunk-header-decoration-style = "#44475a" ul ol
  file-decoration-style = yellow ul ol

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  hunk-header-decoration-style = cyan box ul
[pull]
	rebase = false
